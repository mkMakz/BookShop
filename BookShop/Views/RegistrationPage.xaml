<Page x:Class="BookShop.Views.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookShop.Views"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="RegistrationPage">

    <Grid Margin="5 5 5 5">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0">User name</Label>
        <TextBox x:Name="tbBox" Grid.Row="0" Grid.Column="1" Height="20"></TextBox>
        <Label Grid.Row="1" Grid.Column="0">User password</Label>
        <TextBox x:Name="tbBox2" Grid.Row="1" Grid.Column="1" Height="20"></TextBox>
        <Label Grid.Row="2" Grid.Column="0">Email</Label>
        <TextBox x:Name="tbBox3" Grid.Row="2" Grid.Column="1" Height="20"></TextBox>

        <Button x:Name="btnRegistration" Content="Registration" Grid.Row="3" 
                Grid.Column="0" Grid.ColumnSpan="2"
                Margin="5 5 5 5"
                Click="btnRegistration_Click"></Button>
    </Grid>
</Page>
